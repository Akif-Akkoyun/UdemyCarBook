@model UpdateCarDto
@{
    ViewData["Title"] = "UpdateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="card-title">Araç Günceleme Sayfası</h4>
                            <p class="card-subtitle mb-4">Araç ile ilgili bilgileri eksizsiz doldurmanız önemlidir.Veri Girişlerinden sonra kaydet butonuna tıklayarak güncelleme işleni tamamlayabilirsiniz.</p>

                            <form method="post">
                                <input type="hidden" asp-for="Id" />
                                <div class="form-group">
                                    <label for="exampleInputBrand">Marka</label>
                                    @Html.DropDownListFor(x => x.BrandID, (List<SelectListItem>)ViewBag.BrandValues, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputModel">Model</label>
                                    <input type="text" class="form-control" id="exampleInputModel" asp-for="Model" placeholder="Model Giriniz">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputCoverImge">Kapak Fotoğrafı</label>
                                    <input type="text" class="form-control" id="exampleInputCoverImge" asp-for="CoverImageUrl" placeholder="Kapak Fotoğraf Linkini Giriniz">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputKm">Km</label>
                                    <input type="text" class="form-control" id="exampleInputKm" asp-for="Km" placeholder="Km Giriniz">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputTransmission">Vites Türü</label>
                                    <input type="text" class="form-control" id="exampleInputTransmission" asp-for="Transmission" placeholder="Vites Türü Giriniz">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputSeat">Koltuk Sayısı</label>
                                    <input type="number" class="form-control" id="exampleInputSeat" asp-for="Seat" placeholder="Koltuk Sayısınız Seçiniz">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputLuggage">Bagaj Sayısını</label>
                                    <input type="number" class="form-control" id="exampleInputLuggage" asp-for="Luggage" placeholder="Bagaj Sayısını Giriniz">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputFuel">Yakıt Türü</label>
                                    <input type="text" class="form-control" id="exampleInputFuel" asp-for="Fuel" placeholder="Yakıt Türünü Giriniz">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputBigImageUrl">Büyük Kapak Fotoğrafı</label>
                                    <input type="text" class="form-control" id="exampleInputBigImageUrl" asp-for="BigImageUrl" placeholder="Araç Detayında Gözükecek Kapak Fotoğrafı Linki">
                                </div>

                                <button type="submit" class="btn btn-primary waves-effect waves-light">Aracı Kaydet</button>
                            </form>

                        </div> <!-- end card-body-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



