@model List<ResultBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araba Marka Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Arabalarla ilgili marka listesi, markalar üzerinde düzenleme ve bir markayı kaldırma işlemini gerçekteştirebilirsiniz.Temada veri tutarlılığını sağlayabilmek için lütfen 3'ün katı şeklince veri girişi yapınız.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Marka Adı</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                        <th>Markaya Ait Araçlar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model == null || !Model.Any())
                                    {
                                        <tr>
                                            <td class="alert-row" colspan="5">Herhangi Bir Veri Girişi Bulunamamıştır</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.Name</td>
                                                <td><a href="/AdminBrand/RemoveCarBrand/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                                <td><a href="/AdminBrand/UpdateBrand/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                                                <td><a href="/AdminBrand/UpdateBrand/@item.Id" class="btn btn-outline-dark">Markaya Ait Araçlar</a></td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                            <br />
                            <a href="/AdminBrand/CreateBrand/" class="btn btn-outline-primary">Yeni Marka Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .alert-row {
        background-color: #ffcccc;
        text-align: center;
        color: black;
        font-size: 12px;
        font-weight: bold;
    }
</style>
