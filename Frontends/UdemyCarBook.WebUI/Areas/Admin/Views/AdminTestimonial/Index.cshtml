@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Ana Sayfa Referanslar Listesi</h4>
                        <p class="card-subtitle mb-4">Müşterilerimizin izim hakkımızda söylemiş oldukları ifadeleri yorum olarak ekleyip düzenleyebildiğimiz sayfamız aşağıda yer almaktadır.</p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Ad Soyad</th>
                                        <th>Başlık</th>
                                        <th>Yorum</th>
                                        <th></th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model == null || !Model.Any())
                                    {
                                        <tr>
                                            <td class="alert-row" colspan="5">Herhangi Bir Veri Girişi Bulunamamıştır</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td><img src="@item.ImageUrl" width="50" height="50"/></td>
                                                <td>@item.Name</td>
                                                <td>@item.Title</td>
                                                <td>@item.Comment</td>
                                                <td><a href="/Admin/AdminTestimonial/RemoveTestimonial/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                                <td><a href="/Admin/AdminTestimonial/UpdateTestimonial/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                            <br />
                            <a href="/Admin/AdminTestimonial/CreateTestimonial" class="btn btn-outline-primary">Yeni Referans Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .alert-row {
        background-color: #ffcccc;
        text-align: center;
        color: black;
        font-size: 12px;
        font-weight: bold;
    }
</style>



