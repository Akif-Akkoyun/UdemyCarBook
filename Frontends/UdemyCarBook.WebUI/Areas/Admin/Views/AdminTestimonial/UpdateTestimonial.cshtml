@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Referans Sayfası Veri Düzenleme Alanı</h4>
                        <p class="card-subtitle mb-4">Referans düzemleme işlemnin yapıldığı sayfamızdır.Bilgileri eksiksiz olarak doldurup kaydet butonuna tıklamanız gerekiyor.</p>
                        <form method="post">
                            <input type="hidden" asp-for="Id"/>
                            <div class="form-group">
                                <label for="exampleInputName">Referans Adı Soyadı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Referans Adını Soyadını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleTitle">Referans Ünvanı</label>
                                <input type="text" class="form-control" id="exampleTitle" asp-for="Title" placeholder="Referans Ünvanını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl">Referans Görsel</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Görsel Seçiniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl">Referans Yorumu</label>
                                <textarea rows="5" asp-for="Comment" class="form-control" placeholder="Yorumuzunu Buraya Giriniz"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Sosyal Medya Bilgisini Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>










