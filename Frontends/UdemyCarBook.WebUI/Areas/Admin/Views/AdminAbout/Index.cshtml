@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Ana Sayfa Hakkımızda Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Ana sayfanın ve Hakkımızda sayfasının "Hakkımda" alanında bulunan bilgileri aşağıdan düzenliyebilirsiniz.Tema bütünlüğünü bozulmamsı adına lütfen sadece 1 tane veri giriniz.Aksi durumda tema bütünlüğü bozulacaktır.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>Başlık</th>
                                        <th>Açıklama</th>
                                        <th>Görsel URL</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model == null || !Model.Any())
                                    {
                                        <tr>
                                            <td class="alert-row" colspan="4">Herhangi Bir Veri Girişi Bulunamamıştır</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Title</td>
                                                <td>@item.Description</td>
                                                <td>@item.ImageUrl</td>
                                                <td><a href="/Admin/AdminAbout/RemoveAbout/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                                <td><a href="/Admin/AdminAbout/UpdateAbout/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                            <br />
                            <a href="/Admin/AdminAbout/CreateAbout" class="btn btn-outline-primary">Yeni Hakkımda Alanı Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .alert-row {
        background-color: #ffcccc;
        text-align: center;
        color: black;
        font-size: 12px;
        font-weight: bold;
    }
</style>




