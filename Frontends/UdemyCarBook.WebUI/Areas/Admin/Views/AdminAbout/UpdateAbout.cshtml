@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Hakkımızda Veri Girişi Alanı</h4>
                            <p class="card-subtitle mb-4">
                                Ana sayfanın ve Hakkımızda sayfasının "Hakkımda" alanında bulunan bilgileri aşağıdan düzenliyebilirsiniz.Tema bütünlüğünü bozulmamsı adına lütfen sadece 1 tane veri giriniz.Aksi durumda tema bütünlüğü bozulacaktır.
                            </p>
                            <form method="post">
                                <input type="hidden" asp-for="Id" />
                                <div class="form-group">
                                    <label for="exampleInputTitle">Başlık</label>
                                    <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlığı Giriniz">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputDescription">Açıklama</label>
                                    <textarea rows="5" asp-for="Description" class="form-control" id="exampleInputDescription" placeholder="Açıklama Giriniz"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputImgUrl">Video Açıklama</label>
                                    <input type="text" class="form-control" id="exampleInputImgUrl" asp-for="ImageUrl" placeholder="Resim URL Giriniz">
                                </div>
                                <button type="submit" class="btn btn-success waves-effect waves-light">Hakkımda Bilgisi Güncell</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




